@model TreinamentoWeb.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Landix</title>
    <!--<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />-->
    <link href="~/Content/estilos.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-3">
                <img src="~/Content/imagens/logo.png">
            </div>
            <div class="col-md-3">
                <!--<h1>Primeiro Exercício!</h1>-->
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form class="horizontal" id="myForm">
                    @using (Html.BeginForm("Login", "Login", new { @id = "myForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(model => model.Username)
                            @Html.EditorFor(model => model.Username, new { @id = "inputEmail", @placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "has-error", @id = "error-email" })
                        </div>
                    }
                    
                    <div class="form-group">
                        <label for="inputPassword">Senha</label>
                        <input type="password" class="form-control" id="inputPassword" placeholder="Senha" pattern="[A-Za-z0-9]{8}" required>
                        <small id="error-senha"></small>
                    </div>
                    <div class="form-group text-right">
                        <img id="spinner">
                        <button value="Login" class="btn btn-primary">Login</button>
                    </div>
                    <div>
                        <div class="alert alert-danger" role="alert"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer footer-copyright text-center py-3">
        <span>© 2018 Copyright - Landix Sistemas</span>
    </div>
    <!-- Footer -->

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>

</html>